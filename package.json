{
    "name": "em-script",
    "displayName": "EM•Script",
    "description": "EM•Script platform tooling",
    "version": "0.0.1",
    "publisher": "the-em-foundation",
    "icon": "images/em-icon.png",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/em-foundation/em-script-tools"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "workspaceContains:workspace/em-workspace.ini"
    ],
    "main": "./out/ext/extension",
    "scripts": {
        "vscode:prepublish": "npm run build-base -- --minify",
        "build-cli": "esbuild --bundle --external:vscode ./src/cli/Main --outdir=out/cli --platform=node --format=cjs",
        "build-ext": "esbuild --bundle --external:vscode ./src/ext/extension --outdir=out/ext --platform=node --format=cjs",
        "build": "npm run build-cli -- --sourcemap && npm run build-ext -- --sourcemap ",
        "watch": "npm run build-cli -- --sourcemap --watch"
    },
    "dependencies": {
        "commander": "^8.3.0",
        "json5": "^2.2.3",
        "sprintf-js": "1.0.3"
    },
    "devDependencies": {
        "@types/node": "^22.10.1",
        "@types/vscode": "^1.80.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "extensionDependencies": [
        "vscode-icons-team.vscode-icons"
    ],
    "contributes": {
        "commands": [
            {
                "command": "em.build",
                "title": "EM•Script — Build"
            }
        ],
        "grammars": [
            {
                "language": "em-log",
                "scopeName": "source.eml",
                "path": "./etc/syntaxes/EmLog.tmLanguage.json"
            }
        ],
        "languages": [
            {
                "id": "em",
                "aliases": [
                    "EM•Script",
                    "EM",
                    "Em",
                    "em"
                ],
                "extensions": [
                    ".em.ts"
                ]
            },
            {
                "id": "em-log",
                "aliases": [
                    "EmLog",
                    "em-log"
                ],
                "extensions": [
                    ".eml"
                ],
                "mimetypes": [
                    "text/x-code-output"
                ]
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "em.build",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "em.build",
                    "group": "ZZZem-script@2",
                    "when": "resourceFilename =~ /^.+\\.em\\.ts$/"
                }
            ],
            "editor/context": [
                {
                    "command": "em.build",
                    "group": "ZZZem-builder@2",
                    "when": "resourceExtname == '.ts'"
                }
            ]
        },
        "themes": [
            {
                "label": "EM•Script Dark",
                "uiTheme": "vs-dark",
                "path": "etc/themes/em-dark-color-theme.json"
            }
        ]
    }
}